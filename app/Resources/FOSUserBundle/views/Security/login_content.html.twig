{% trans_default_domain 'FOSUserBundle' %}

<div class="auth-wrapper">
    <h3 class="text-center mb-3">Prisijungimas</h3>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="form-group">
            <label for="username">Vartotojo vardas</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
        </div>

        <div class="form-group">
            <label for="password">Slapta≈æodis</label>
            <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
        </div>

        <div>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">Prisiminti mane</label>
        </div>
        <div>
            <a href="/register">Registruotis</a>
        </div>
        <div class="text-center">
            <input class="btn btn-primary mt-3" type="submit" id="_submit" name="_submit" value="Patvirtinti" />
        </div>
    </form>
</div>
