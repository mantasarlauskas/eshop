{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h2 class="text-center page-title">Užsakymai</h2>
        {% if orders|length == 0 %}
            <p>Užsakymų kol kas nėra</p>
        {% else %}
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Data</th>
                    <th scope="col">Statusas</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
                </thead>
                {% for order in orders %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ order.dateTime|date('Y-m-d') }}</td>
                        <td>
                            {% if order.isConfirmed == true %}
                                Užbaigtas
                            {% elseif order.isAccepted == true %}
                                Ruošiamas
                            {% else %}
                                Nepatvirtintas
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('order.view', { 'id': order.id }) }}">
                                Peržiūrėti
                            </a>
                        </td>
                        <td>
                            {% if order.isConfirmed == false and order.isAccepted == false and is_granted("ROLE_ADMIN") %}
                                <a href="{{ path('order.activate', { 'id': order.id }) }}">
                                    Patvirtinti
                                </a>
                            {% elseif order.isConfirmed == false and order.isAccepted == true and is_granted("ROLE_ADMIN") %}
                                <a href="{{ path('order.finish', { 'id': order.id }) }}">
                                    Užbaigti
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% endif %}
    </div>
{% endblock %}